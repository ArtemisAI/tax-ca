{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "lib": ["es2020"],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "noEmitOnError": true,
    "outDir": "dist",
    "baseUrl": "./src/",
    "paths": {},
    "declaration": true,
    "declarationDir": "dist",
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "src/**/*.spec.ts"
  ]
}
